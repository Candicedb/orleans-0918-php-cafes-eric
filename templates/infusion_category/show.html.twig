{% extends 'layout.html.twig' %}
{% block title %}infusion d√©tail{% endblock %}
{% block body %}
    <h1 class="section-heading mb-4 text-center">
        <span class="section-heading-lower">{{ category.title }}</span>
        <hr class="mb-5">
    </h1>
    <section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner text-center rounded">
                    {% for familyInfusion, infusions in infusionByFamilyInfusion %}
                        <h2>
                            <span class="section-heading-upper mt-4">{{ familyInfusion }}</span>
                        </h2>
                        {% for infusion in infusions %}
                            <p class="text-left ml-5 mt-4"><span
                                        class="oblic font-weight-bold">{{ infusion.name }}</span>
                                : {{ infusion.ingredients }}</p>
                            {% if infusion.feature is not empty %}
                            <p><br/> Note : {{ infusion.feature }}</p>
                        {% endfor %}
                    {% endfor %}
                    <a href="{{ path('infusion_category') }}">retour</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}