{% extends 'layout.html.twig' %}
{% block title %}Nos infusions{% endblock %}
{% block body %}
    <section class="page-section clearfix">
        <div class="container">
            <div class="about-heading-content">
                <h1 class="titles">
                    <span class="section-heading-lower text-uppercase font-weight-bold justify-content-center d-flex ">Infusions</span>
                </h1>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="row justify-content-center ">
            {% for category in categories %}
                <div class="col-6">
                    <div class="bg-faded rounded p-2 mb-5">
                        <h2 class="section-heading-tea mb-2 text-center">
                <span class="linkCoffee section-heading-lower-tea"><a
                            href="{{ path('tea_category_show', {'id': category.id }) }}">{{ category.title }}</a></span>
                        </h2>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}