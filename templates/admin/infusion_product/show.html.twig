{% extends 'base.html.twig' %}

{% block title %}InfusionProduct{% endblock %}

{% block body %}
    <h1>InfusionProduct</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ infusion_product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ infusion_product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ infusion_product.description }}</td>
            </tr>
            <tr>
                <th>TastingNote</th>
                <td>{{ infusion_product.tastingNote }}</td>
            </tr>
            <tr>
                <th>Highlighted</th>
                <td>{{ infusion_product.highlighted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Novelty</th>
                <td>{{ infusion_product.novelty ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('infusion_product_index') }}">back to list</a>

    <a href="{{ path('infusion_product_edit', {'id': infusion_product.id}) }}">edit</a>

    {{ include('admin/infusion_product/_delete_form.html.twig') }}
{% endblock %}
