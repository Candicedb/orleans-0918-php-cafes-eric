{% extends 'layoutAdmin.html.twig' %}

{% block title %}Tea{% endblock %}

{% block body %}
    <h1>Tea</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tea.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tea.name }}</td>
            </tr>
            <tr>
                <th>Ingrédients</th>
                <td>{{ tea.ingredients }}</td>
            </tr>
            <tr>
                <th>Particularité</th>
                <td>{{ tea.feature }}</td>
            </tr>
            <tr>
                <th>Produit du mois</th>
                <td>{{ tea.highlighted ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Nouveauté</th>
                <td>{{ tea.novelty ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tea_index') }}">back to list</a>

    <a href="{{ path('tea_edit', {'id': tea.id}) }}">edit</a>

    {{ include('admin/tea/_delete_form.html.twig') }}
{% endblock %}
