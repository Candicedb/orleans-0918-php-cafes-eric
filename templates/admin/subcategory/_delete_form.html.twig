<form class="d-inline" method="post" action="{{ path('subcategory_delete', {'id': subcategory.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="SUPPRIMER">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subcategory.id) }}">
    <button class="btn btn-outline-secondary"><i class="far fa-trash-alt"></i> Delete</button>
</form>
