{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des infusions{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="admin-title">Liste des infusions</h1>
        <div class="mb-5 mt-5">
            <a class="btn btn-outline-dark" href="{{ path('infusion_new') }}"><i
                        class="fa fa-plus"></i> Ajouter une nouvelle infusion</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Nouveauté</th>
                <th>Produit du mois</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for infusion in infusions %}
                <tr>
                    <td><i class="fas fa-leaf"></i> {{ infusion.name }}</td>
                    {% if infusion.novelty == true %}
                        <td><a class="btn btn-outline-dark"
                               href="{{ path('infusion_novelty', {'id': infusion.id}) }}"><i class="far fa-star"></i> Ne
                                plus
                                mettre en nouveauté</a></td>
                    {% else %}
                        <td><a class="btn btn-outline-dark"
                               href="{{ path('infusion_novelty', {'id': infusion.id}) }}"><i class="fas fa-star"></i>
                                Mettre en nouveauté</a></td>
                    {% endif %}
                    {% if infusion.highlighted == true %}
                        <td><a class="btn btn-outline-dark"
                               href="{{ path('infusion_highlighted', {'id': infusion.id}) }}"><i class="far fa-star"></i> Ne
                                plus
                                mettre en produit du mois</a></td>
                    {% else %}
                        <td><a class="btn btn-outline-dark"
                               href="{{ path('infusion_highlighted', {'id': infusion.id}) }}"><i class="fas fa-star"></i>
                                Mettre en produit du mois</a></td>
                    {% endif %}
                    <td>
                        <a class="btn btn-outline-dark"
                           href="{{ path('infusion_show', {'id': infusion.id}) }}"><i class="far fa-eye"></i> Voir</a>
                        <a class="btn btn-outline-dark"
                           href="{{ path('infusion_edit', {'id': infusion.id}) }}"><i class="fas fa-pencil-alt"></i>
                            Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune infusion enregistrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
